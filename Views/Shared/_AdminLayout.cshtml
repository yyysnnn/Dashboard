@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment env
<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="@(env.IsDevelopment() ? "/" : "/dashboard/")" />
    <title>@ViewData["Title"] - 築崎後台管理系統</title>
    <link rel="stylesheet" href="lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="lib/bootstrap-icons/bootstrap-icons.css" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Microsoft JhengHei', 'PingFang TC', 'Helvetica Neue', Arial, sans-serif;
            background: #f5f7fa;
            overflow-x: hidden;
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 260px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 0;
            box-shadow: 4px 0 10px rgba(0, 0, 0, 0.1);
            z-index: 1000;
            transition: all 0.3s ease;
        }

        .sidebar-header {
            padding: 2rem 1.5rem;
            background: rgba(0, 0, 0, 0.1);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .sidebar-header h3 {
            color: white;
            font-size: 1.5rem;
            font-weight: 700;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .sidebar-header p {
            color: rgba(255, 255, 255, 0.8);
            font-size: 0.9rem;
            margin: 0.5rem 0 0 0;
        }

        .sidebar-menu {
            padding: 1rem 0;
        }

        .menu-item {
            display: block;
            padding: 1rem 1.5rem;
            color: rgba(255, 255, 255, 0.9);
            text-decoration: none;
            transition: all 0.3s ease;
            border-left: 4px solid transparent;
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .menu-item:hover {
            background: rgba(255, 255, 255, 0.1);
            color: white;
            border-left-color: white;
        }

        .menu-item.active {
            background: rgba(255, 255, 255, 0.15);
            color: white;
            border-left-color: white;
        }

        .menu-item i {
            font-size: 1.2rem;
            width: 24px;
            text-align: center;
        }

        /* Main Content */
        .main-content {
            margin-left: 260px;
            min-height: 100vh;
            padding: 0;
        }

        /* Top Bar */
        .top-bar {
            background: white;
            padding: 1rem 2rem;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .top-bar h1 {
            margin: 0;
            font-size: 1.5rem;
            color: #2d3748;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 600;
        }

        /* Content Area */
        .content-area {
            padding: 2rem;
        }

        /* Cards */
        .admin-card {
            background: white;
            border-radius: 12px;
            padding: 1.5rem;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
            margin-bottom: 1.5rem;
        }

        .card-header-custom {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid #f0f4ff;
        }

        .card-header-custom h3 {
            margin: 0;
            font-size: 1.3rem;
            color: #2d3748;
            font-weight: 600;
        }

        /* Buttons */
        .btn-primary-custom {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            color: white;
            padding: 0.6rem 1.5rem;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .btn-primary-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
            color: white;
        }

        /* Dashboard to Admin Link */
        .dashboard-link {
            display: block;
            padding: 1rem 1.5rem;
            color: rgba(255, 255, 255, 0.7);
            text-decoration: none;
            transition: all 0.3s ease;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            margin-top: auto;
            position: absolute;
            bottom: 0;
            width: 100%;
            background: rgba(0, 0, 0, 0.1);
        }

        .dashboard-link:hover {
            background: rgba(255, 255, 255, 0.1);
            color: white;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .sidebar {
                width: 0;
                overflow: hidden;
            }

            .main-content {
                margin-left: 0;
            }

            .sidebar.active {
                width: 260px;
            }
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-header">
            <h3><i class="bi bi-grid-fill"></i> 築崎後台</h3>
            <p>管理系統</p>
        </div>
        <nav class="sidebar-menu">
            <a asp-controller="Admin" asp-action="Index" class="menu-item @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
                <i class="bi bi-house-door-fill"></i>
                <span>總覽</span>
            </a>
            <a asp-controller="Admin" asp-action="Stores" class="menu-item @(ViewContext.RouteData.Values["action"]?.ToString() == "Stores" ? "active" : "")">
                <i class="bi bi-shop"></i>
                <span>店舖管理</span>
            </a>
            <a asp-controller="Admin" asp-action="Transactions" class="menu-item @(ViewContext.RouteData.Values["action"]?.ToString() == "Transactions" ? "active" : "")">
                <i class="bi bi-receipt"></i>
                <span>交易記錄</span>
            </a>
            <a asp-controller="Admin" asp-action="Members" class="menu-item @(ViewContext.RouteData.Values["action"]?.ToString() == "Members" ? "active" : "")">
                <i class="bi bi-people-fill"></i>
                <span>會員管理</span>
            </a>
            <a asp-controller="Admin" asp-action="Revenues" class="menu-item @(ViewContext.RouteData.Values["action"]?.ToString() == "Revenues" ? "active" : "")">
                <i class="bi bi-graph-up-arrow"></i>
                <span>營收目標</span>
            </a>
        </nav>
        <a asp-controller="Dashboard" asp-action="Index" class="dashboard-link">
            <i class="bi bi-speedometer2"></i> 前往戰情室
        </a>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Top Bar -->
        <div class="top-bar">
            <h1>@ViewData["Title"]</h1>
            <div class="user-info">
                <div class="user-avatar">
                    <i class="bi bi-person-fill"></i>
                </div>
                <span>管理員</span>
            </div>
        </div>

        <!-- Content Area -->
        <div class="content-area">
            @RenderBody()
        </div>
    </div>

    <script src="lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
